<ul class="navbar-nav align-items-center gap-2">
	@if (User.Identity.IsAuthenticated)
	{
		<li class="nav-item">
			<a class="nav-link position-relative" href="#" title="Notifications">
				<i class="fas fa-bell fa-lg"></i>
				<span class="position-absolute top-80 start-80 translate-middle badge rounded-pill bg-danger" style="font-size: 0.5em;">!</span>
			</a>
		</li>
		<li class="nav-item">
			<a class="nav-link position-relative" asp-controller="Chat" asp-action="Index" title="Notifications">
				<i class="fa-solid fa-message"></i>
				<span class="position-absolute top-80 start-80 translate-middle badge rounded-pill bg-danger" style="font-size: 0.5em;">!</span>
			</a>
		</li>

		<!-- Custom Profile Dropdown -->
		<li class="nav-item custom-dropdown" style="position: relative;">
			<a class="nav-link" href="#" id="profileDropdown" onclick="toggleDropdown(event)" aria-expanded="false">
				<i class="fas fa-user-circle fa-lg"></i>
			</a>
			<ul class="custom-dropdown-menu" id="profileDropdownMenu" onclick="event.stopPropagation()" style="display: none; position: absolute; right: 0; top: 100%; min-width: 200px; background: #fff; box-shadow: 0 4px 16px rgba(0,0,0,0.12); border-radius: 0.5rem; z-index: 1000; padding: 0.5rem 0;">
				@if (User.IsInRole("Admin"))
				{
					<li>
						<a class="dropdown-item" href="@Url.Action("Index", "AdminDashboard")">
							<i class="fas fa-tachometer-alt me-2"></i> Admin Dashboard
						</a>
					</li>
					<li>
						<a class="dropdown-item" href="@Url.Action("ManageUsers", "Admin")">
							<i class="fas fa-users-cog me-2"></i> Manage Users
						</a>
					</li>
				}
				<li>
					<a class="dropdown-item" href="@Url.Action("Index", "Profile")">
						<i class="fas fa-user me-2"></i> Profile
					</a>
				</li>
				<li>
					<a class="dropdown-item" href="@Url.Action("Settings", "Profile")">
						<i class="fas fa-cog me-2"></i> Settings
					</a>
				</li>
				<li><hr class="dropdown-divider"></li>
				<li>
					<form asp-controller="Home" asp-action="Logout" method="post">
						<button type="submit" class="dropdown-item text-danger">
							<i class="fas fa-sign-out-alt me-2"></i> Logout
						</button>
					</form>
				</li>
			</ul>
		</li>
	}
	else
	{
		<li class="nav-item">
			<a class="nav-link" asp-controller="Register" asp-action="Register">
				<i class="fas fa-user-plus me-1"></i> Register
			</a>
		</li>
		<li class="nav-item">
			<a class="nav-link" asp-controller="Login" asp-action="Login">
				<i class="fas fa-sign-in-alt me-1"></i> Login
			</a>
		</li>
	}
</ul>