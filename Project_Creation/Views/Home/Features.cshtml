@{
    ViewData["Title"] = "Features - GrowTrack";
}

<!-- Include the auth navbar -->
<partial name="_AuthNavbar" />

<!-- Features Hero Section -->
<div class="features-hero-section position-relative vh-100">
    <!-- Background elements -->
    <div class="features-bg">
        <div class="features-bg-image"></div>
        <div class="glassmorphism-overlay"></div>
        <div class="gradient-sphere gradient-1"></div>
        <div class="gradient-sphere gradient-2"></div>
        <div class="animated-circle circle-1"></div>
        <div class="animated-circle circle-2"></div>
        <div class="grid-pattern"></div>
    </div>
    
    <div class="container position-relative">
        <div class="row py-5">
            <div class="col-lg-6 features-content-col">
                <div class="features-badge">
                    <span>CAPABILITIES</span>
                </div>
                <h1 class="features-title">Our <span>Features</span></h1>
                <p class="features-description">
                    Discover the powerful tools and capabilities that make GrowTrack the ultimate business intelligence platform for SMEs.
                </p>
            </div>
        </div>
    </div>
</div>

<!-- Main Features Section -->
<div class="main-features-section py-5">
    <div class="container">
        <div class="text-center mb-5">
            <span class="section-badge">CORE FEATURES</span>
            <h2 class="section-title animate-title">Comprehensive Business Intelligence</h2>
            <p class="section-subtitle">Powerful tools designed to transform your business operations</p>
        </div>
        
        <div class="row g-4 mb-5">
            <!-- Feature 1 -->
            <div class="col-lg-4 col-md-6">
                <div class="feature-card h-100">
                    <div class="feature-icon-wrapper">
                        <div class="feature-icon" style="background-color: rgba(243, 153, 62, 0.1); color: #F3993E;">
                            <i class="fas fa-chart-line"></i>
                        </div>
                    </div>
                    <h3 class="feature-title">Business Dashboard</h3>
                    <p class="feature-desc">
                        A comprehensive dashboard providing an overview of sales, inventory, and system activity with data summaries, stock alerts, sales trends, and quick actions.
                    </p>
                    <ul class="feature-list">
                        <li>Real-time business performance summaries</li>
                        <li>Inventory and leads overview</li>
                        <li>Quick access to common actions</li>
                        <li>Marketplace controls and notifications</li>
                    </ul>
                </div>
            </div>
            
            <!-- Feature 2 -->
            <div class="col-lg-4 col-md-6">
                <div class="feature-card h-100">
                    <div class="feature-icon-wrapper">
                        <div class="feature-icon" style="background-color: rgba(48, 66, 81, 0.1); color: #304251;">
                            <i class="fas fa-users"></i>
                        </div>
                    </div>
                    <h3 class="feature-title">Lead Management</h3>
                    <p class="feature-desc">
                        Comprehensive tools to track and manage potential business opportunities and customer interactions, helping you convert prospects into loyal customers.
                    </p>
                    <ul class="feature-list">
                        <li>Lead tracking and categorization</li>
                        <li>Status tracking and filtering</li>
                        <li>Detailed lead profiles</li>
                        <li>Interest and product association</li>
                    </ul>
                </div>
            </div>
            
            <!-- Feature 3 -->
            <div class="col-lg-4 col-md-6">
                <div class="feature-card h-100">
                    <div class="feature-icon-wrapper">
                        <div class="feature-icon" style="background-color: rgba(233, 243, 245, 0.6); color: #304251;">
                            <i class="fas fa-shopping-cart"></i>
                        </div>
                    </div>
                    <h3 class="feature-title">Inventory Management</h3>
                    <p class="feature-desc">
                        Streamline your inventory processes with comprehensive tracking, stock level alerts, order management, and supplier coordination all in one integrated system.
                    </p>
                    <ul class="feature-list">
                        <li>Real-time inventory tracking</li>
                        <li>Stock movement recording</li>
                        <li>Low stock notifications</li>
                        <li>Inventory reporting and analysis</li>
                    </ul>
                </div>
            </div>
            
            <!-- Feature 4 -->
            <div class="col-lg-4 col-md-6">
                <div class="feature-card h-100">
                    <div class="feature-icon-wrapper">
                        <div class="feature-icon" style="background-color: rgba(243, 153, 62, 0.1); color: #F3993E;">
                            <i class="fas fa-bullhorn"></i>
                        </div>
                    </div>
                    <h3 class="feature-title">Campaign Management</h3>
                    <p class="feature-desc">
                        Design, execute, and analyze marketing campaigns with powerful tools for audience targeting, content management, and performance tracking.
                    </p>
                    <ul class="feature-list">
                        <li>Campaign creation and scheduling</li>
                        <li>Message templating</li>
                        <li>Target audience selection</li>
                        <li>Campaign performance tracking</li>
                    </ul>
                </div>
            </div>
            
            <!-- Feature 5 -->
            <div class="col-lg-4 col-md-6">
                <div class="feature-card h-100">
                    <div class="feature-icon-wrapper">
                        <div class="feature-icon" style="background-color: rgba(48, 66, 81, 0.1); color: #304251;">
                            <i class="fas fa-calendar-alt"></i>
                        </div>
                    </div>
                    <h3 class="feature-title">Appointment Scheduler</h3>
                    <p class="feature-desc">
                        Optimize your team's productivity with intelligent scheduling tools, shared calendars, appointment management, and automated reminders.
                    </p>
                    <ul class="feature-list">
                        <li>Multiple calendar views (day, week, month)</li>
                        <li>Event prioritization and categorization</li>
                        <li>Appointment tracking and management</li>
                        <li>Shared visibility options</li>
                    </ul>
                </div>
            </div>
            
            <!-- Feature 6 -->
            <div class="col-lg-4 col-md-6">
                <div class="feature-card h-100">
                    <div class="feature-icon-wrapper">
                        <div class="feature-icon" style="background-color: rgba(233, 243, 245, 0.6); color: #304251;">
                            <i class="fas fa-comments"></i>
                        </div>
                    </div>
                    <h3 class="feature-title">Business Chat System</h3>
                    <p class="feature-desc">
                        Foster teamwork and communication with integrated messaging, allowing seamless communication between team members and business partners.
                    </p>
                    <ul class="feature-list">
                        <li>Real-time messaging system</li>
                        <li>Read receipts and notifications</li>
                        <li>Secure message transmission</li>
                        <li>Message history tracking</li>
                    </ul>
                </div>
            </div>

            <!-- Feature 7 -->
            <div class="col-lg-4 col-md-6">
                <div class="feature-card h-100">
                    <div class="feature-icon-wrapper">
                        <div class="feature-icon" style="background-color: rgba(243, 153, 62, 0.1); color: #F3993E;">
                            <i class="fas fa-store"></i>
                        </div>
                    </div>
                    <h3 class="feature-title">Marketplace Integration</h3>
                    <p class="feature-desc">
                        Showcase your products in an integrated marketplace environment, allowing customers to browse, search, and request your offerings.
                    </p>
                    <ul class="feature-list">
                        <li>Product listings and categorization</li>
                        <li>Customer product requests</li>
                        <li>Seller profile management</li>
                        <li>Product visibility controls</li>
                    </ul>
                </div>
            </div>
            
            <!-- Feature 8 -->
            <div class="col-lg-4 col-md-6">
                <div class="feature-card h-100">
                    <div class="feature-icon-wrapper">
                        <div class="feature-icon" style="background-color: rgba(48, 66, 81, 0.1); color: #304251;">
                            <i class="fas fa-file-alt"></i>
                        </div>
                    </div>
                    <h3 class="feature-title">Comprehensive Reports</h3>
                    <p class="feature-desc">
                        Access detailed reports on sales, inventory, and stock movements to gain valuable insights into your business performance and make data-driven decisions.
                    </p>
                    <ul class="feature-list">
                        <li>Sales reports with filtering options</li>
                        <li>Inventory valuation reports</li>
                        <li>Stock movement analysis</li>
                        <li>Data export capabilities (CSV, Excel)</li>
                    </ul>
                </div>
            </div>
            
            <!-- Feature 9 -->
            <div class="col-lg-4 col-md-6">
                <div class="feature-card h-100">
                    <div class="feature-icon-wrapper">
                        <div class="feature-icon" style="background-color: rgba(233, 243, 245, 0.6); color: #304251;">
                            <i class="fas fa-user-cog"></i>
                        </div>
                    </div>
                    <h3 class="feature-title">Staff Management</h3>
                    <p class="feature-desc">
                        Create and manage staff accounts with customized access permissions, allowing you to delegate responsibilities while maintaining control over sensitive information.
                    </p>
                    <ul class="feature-list">
                        <li>Role-based access control</li>
                        <li>Granular permission settings</li>
                        <li>Staff activity monitoring</li>
                        <li>Secure credential management</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- CTA Section -->
<div class="features-cta-section py-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto text-center">
                <h2 class="mb-4">Ready to Experience GrowTrack?</h2>
                <p class="mb-4">Start transforming your business operations with our powerful suite of tools.</p>
                <div class="cta-buttons">
                    <a asp-controller="Register" asp-action="Register" class="btn-primary-cta me-3">
                        Get Started <i class="fas fa-arrow-right ms-2"></i>
                    </a>
                    <a asp-controller="Home" asp-action="Contact" class="btn-secondary-cta">
                        Contact Sales
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* Features Hero Section */
    .features-hero-section {
        background-color: #304251;
        padding: 6rem 0 4rem;
        position: relative;
        overflow: hidden;
        color: white;
    }
    
    .features-bg {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        overflow: hidden;
    }
    
    .features-bg-image {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-image: url('https://images.unsplash.com/photo-1557426272-fc759fdf7a8d?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1470&q=80');
        background-size: cover;
        background-position: center;
        opacity: 0.4;
        z-index: 1;
    }
    
    .features-content-col {
        position: relative;
        z-index: 10;
    }
    
    .features-badge {
        display: inline-block;
        padding: 6px 16px;
        border-radius: 50px;
        background-color: rgba(243, 153, 62, 0.2);
        border: 1px solid rgba(243, 153, 62, 0.3);
        color: rgb(255, 255, 255);
        font-size: 0.75rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 1px;
        margin-bottom: 1.5rem;
        animation: float 3s infinite ease-in-out;
        position: relative;
        z-index: 1;
        backdrop-filter: blur(5px);
        -webkit-backdrop-filter: blur(5px);
    }
    
    .features-title {
        font-size: 3.5rem;
        font-weight: 800;
        margin-bottom: 1.5rem;
        line-height: 1.1;
        letter-spacing: -0.5px;
        background: linear-gradient(to right, #ffffff, #e0e0e0);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        display: inline-block;
    }
    
    .features-title span {
        background: linear-gradient(to right, #F3993E, #ffb366);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        display: inline-block;
    }
    
    .features-description {
        font-size: 1.15rem;
        line-height: 1.6;
        color: rgba(255, 255, 255, 0.9);
        margin-bottom: 2rem;
        max-width: 500px;
    }
    
    /* Main Features Section */
    .main-features-section {
        background-color: #F7F5EF;
        position: relative;
    }
    
    .section-badge {
        display: inline-block;
        padding: 8px 20px;
        border-radius: 50px;
        background: linear-gradient(120deg, rgba(243, 153, 62, 0.15), rgba(255, 159, 45, 0.1));
        color: #F3993E;
        font-size: 0.85rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 2px;
        margin-bottom: 1.5rem;
        position: relative;
        box-shadow: 0 4px 15px rgba(243, 153, 62, 0.1);
    }
    
    .section-title {
        font-size: 2.5rem;
        font-weight: 700;
        color: #304251;
        margin-bottom: 1rem;
    }
    
    .section-subtitle {
        font-size: 1.1rem;
        color: #6c757d;
        max-width: 700px;
        margin: 0 auto;
    }
    
    .feature-card {
        background-color: white;
        border-radius: 15px;
        padding: 2rem;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
        transition: all 0.3s ease;
        height: 100%;
        position: relative;
        overflow: hidden;
    }
    
    .feature-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 15px 40px rgba(0, 0, 0, 0.12);
    }
    
    .feature-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 5px;
        height: 0;
        background: linear-gradient(to bottom, #F3993E, #ff9f2d);
        transition: all 0.3s ease;
    }
    
    .feature-card:hover::before {
        height: 100%;
    }
    
    .feature-icon-wrapper {
        margin-bottom: 1.5rem;
    }
    
    .feature-icon {
        width: 70px;
        height: 70px;
        border-radius: 15px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.8rem;
        transition: all 0.3s ease;
    }
    
    .feature-card:hover .feature-icon {
        transform: scale(1.1) rotate(-5deg);
    }
    
    .feature-title {
        font-size: 1.4rem;
        font-weight: 700;
        color: #304251;
        margin-bottom: 1rem;
    }
    
    .feature-desc {
        font-size: 0.95rem;
        color: #6c757d;
        line-height: 1.6;
        margin-bottom: 1.5rem;
    }
    
    .feature-list {
        list-style: none;
        padding-left: 0;
        margin-bottom: 0;
    }
    
    .feature-list li {
        position: relative;
        padding-left: 1.5rem;
        margin-bottom: 0.5rem;
        font-size: 0.9rem;
        color: #6c757d;
    }
    
    .feature-list li::before {
        content: '✓';
        position: absolute;
        left: 0;
        color: #F3993E;
        font-weight: bold;
    }
    
    /* Capabilities Section */
    .capabilities-section {
        background-color: #F7F5EF;
        position: relative;
    }
    
    .capability-card {
        background-color: white;
        border-radius: 15px;
        padding: 2rem;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
        transition: all 0.3s ease;
        height: 100%;
        margin-bottom: 2rem;
    }
    
    .capability-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 15px 40px rgba(0, 0, 0, 0.12);
    }
    
    .capability-icon {
        width: 60px;
        height: 60px;
        background: linear-gradient(135deg, #F3993E, #ff9f2d);
        color: white;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        margin-bottom: 1.5rem;
    }
    
    .capability-title {
        font-size: 1.3rem;
        font-weight: 700;
        color: #304251;
        margin-bottom: 1.5rem;
        padding-bottom: 1rem;
        border-bottom: 1px solid #e9ecef;
    }
    
    .capability-specs {
        margin-top: 1rem;
    }
    
    .spec-item {
        margin-bottom: 0.75rem;
    }
    
    .spec-label {
        font-weight: 600;
        color: #6c757d;
        font-size: 0.9rem;
        display: block;
    }
    
    .spec-value {
        color: #304251;
        font-size: 0.95rem;
    }
    
    /* CTA Section */
    .features-cta-section {
        background: linear-gradient(135deg, #304251, #1c2a3a);
        color: white;
        padding: 4rem 0;
        position: relative;
    }
    
    .features-cta-section h2 {
        font-size: 2.5rem;
        font-weight: 700;
    }
    
    .features-cta-section p {
        font-size: 1.1rem;
        color: rgba(255, 255, 255, 0.8);
        max-width: 600px;
        margin-left: auto;
        margin-right: auto;
    }
    
    .cta-buttons {
        margin-top: 2rem;
    }
    
    .btn-primary-cta {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        padding: 0.75rem 1.5rem;
        background: linear-gradient(to right, #F3993E, #ff9f2d);
        color: white;
        font-weight: 600;
        border: none;
        border-radius: 50px;
        text-decoration: none;
        transition: all 0.3s ease;
    }
    
    .btn-primary-cta:hover {
        transform: translateY(-3px);
        box-shadow: 0 10px 20px rgba(243, 153, 62, 0.3);
        color: white;
    }
    
    .btn-secondary-cta {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        padding: 0.75rem 1.5rem;
        background: transparent;
        color: white;
        font-weight: 600;
        border: 1px solid rgba(255, 255, 255, 0.3);
        border-radius: 50px;
        text-decoration: none;
        transition: all 0.3s ease;
    }
    
    .btn-secondary-cta:hover {
        background: rgba(255, 255, 255, 0.1);
        transform: translateY(-3px);
        color: white;
    }
    
    /* Responsive styles */
    @@media (max-width: 991px) {
        .features-title {
            font-size: 3rem;
        }
        
        .section-title {
            font-size: 2.2rem;
        }
        
        .feature-card {
            margin-bottom: 2rem;
        }
    }
    
    @@media (max-width: 767px) {
        .features-hero-section {
            padding: 4rem 0 3rem;
        }
        
        .features-title {
            font-size: 2.5rem;
        }
        
        .section-title {
            font-size: 1.8rem;
        }
        
        .feature-card,
        .capability-card {
            padding: 1.5rem;
        }
        
        .features-cta-section h2 {
            font-size: 2rem;
        }
        
        .cta-buttons {
            display: flex;
            flex-direction: column;
            gap: 1rem;
            align-items: center;
        }
    }

     #wrapper {
        padding: 0px !important;
    }
    
    @@media (max-width: 575px) {
        .features-title {
            font-size: 2rem;
        }
        
        .feature-icon {
            width: 60px;
            height: 60px;
            font-size: 1.5rem;
        }
        
        .feature-title {
            font-size: 1.2rem;
        }
    }
</style> 