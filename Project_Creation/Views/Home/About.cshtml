        width: 100%;
        height: 300px;
        object-fit: cover;
        transition: all 0.5s ease;
    }
    
    .team-card:hover .team-img {
        transform: scale(1.05);
    }
    
    .team-social {
        position: absolute;
        bottom: -50px;
        left: 0;
        right: 0;
        display: flex;
        justify-content: center;
        gap: 1rem;
        padding: 1rem 0;
