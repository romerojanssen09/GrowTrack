<style>
    /* About Hero Section */
    .about-hero-section {
        background-color: #304251;
        padding: 6rem 0 4rem;
        position: relative;
        overflow: hidden;
        color: white;
    }
    
    .about-bg {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        overflow: hidden;
    }
    
    .about-bg-image {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-image: url('https://images.unsplash.com/photo-1600880292203-757bb62b4baf?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1470&q=80');
        background-size: cover;
        background-position: center;
        opacity: 0.4;
        z-index: 1;
    }
    
    .about-content-col {
        position: relative;
        z-index: 10;
    }
    
    .about-badge {
        display: inline-block;
        padding: 6px 16px;
        border-radius: 50px;
        background-color: rgba(243, 153, 62, 0.2);
        border: 1px solid rgba(243, 153, 62, 0.3);
        color: rgb(255, 255, 255);
        font-size: 0.75rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 1px;
        margin-bottom: 1.5rem;
        animation: float 3s infinite ease-in-out;
        position: relative;
        z-index: 1;
        backdrop-filter: blur(5px);
        -webkit-backdrop-filter: blur(5px);
    }
    
    .about-title {
        font-size: 3.5rem;
        font-weight: 800;
        margin-bottom: 1.5rem;
        line-height: 1.1;
        letter-spacing: -0.5px;
        background: linear-gradient(to right, #ffffff, #e0e0e0);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        display: inline-block;
    }
    
    .about-title span {
        background: linear-gradient(to right, #F3993E, #ffb366);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        display: inline-block;
    }
    
