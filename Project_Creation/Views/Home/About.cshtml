        transition: all 0.3s ease;
    }
    
    .team-card:hover .team-social {
        bottom: 0;
    }
    
    .team-social-link {
        width: 35px;
        height: 35px;
        background-color: white;
        color: #304251;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 0.9rem;
        transition: all 0.3s ease;
    }
    
    .team-social-link:hover {
        background-color: #F3993E;
        color: white;
        transform: translateY(-3px);
    }
    
    .team-info {
        padding: 1.5rem;
    }
    
    .team-name {
        font-size: 1.3rem;
        font-weight: 700;
        margin-bottom: 0.5rem;
        color: #304251;
    }
    
    .team-position {
        font-size: 0.9rem;
        color: #F3993E;
        font-weight: 600;
        margin-bottom: 1rem;
    }
    
    .team-bio {
        font-size: 0.95rem;
        color: #6c757d;
        line-height: 1.6;
        margin-bottom: 0;
