@{
    ViewData["Title"] = "Home - GrowTrack";
}

<div class="hero-section position-relative text-white" style="background-color: #304251;">
    <div class="container py-5">
        <div class="row align-items-center py-5">
            <div class="col-lg-6 mb-4 mb-lg-0">
                <h1 class="display-4 fw-bold mb-3">GrowTrack</h1>
                <p class="lead mb-4">Gain valuable insights into your business performance with our comprehensive analytics-driven CRM solution designed specifically for small and medium enterprises.</p>
                <div class="d-flex flex-wrap gap-3">
                    <a href="#features" class="btn btn-light btn-lg px-4 rounded-pill" style="z-index: 99;">
                        <i class="fas fa-info-circle me-2"></i>Learn More
                    </a>
                    <a asp-controller="Login" asp-action="Login" class="btn btn-lg px-4 rounded-pill" style="background-color: #F3993E; color: white; z-index: 99;">
                        <i class="fas fa-sign-in-alt me-2"></i>Login
                    </a>
                </div>
            </div>
            <div class="col-lg-6 text-center">
                <img src="~/images/default/growchart.jpg" alt="GrowTrack Dashboard" class="img-fluid rounded shadow-lg" style="max-height: 400px;">
            </div>
        </div>
    </div>
