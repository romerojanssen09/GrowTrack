@{
    ViewData["Title"] = "Access Denied";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body text-center p-5">
                    <i class="fas fa-exclamation-triangle text-danger" style="font-size: 4rem;"></i>
                    <h1 class="mt-4 mb-3">Access Denied</h1>
                    <p class="lead mb-4">You do not have permission to access this resource.</p>
                    
                    @if (User.Identity.IsAuthenticated)
                    {
                        <p>
                            You are currently logged in as: <strong>@User.Identity.Name</strong><br>
                            Your role does not have sufficient permissions for the requested page.
                        </p>
                        
                        <div class="mt-4">
                            <a href="javascript:history.back()" class="btn btn-outline-secondary me-2">
                                <i class="fas fa-arrow-left me-2"></i>Go Back
                            </a>
                            <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                                <i class="fas fa-home me-2"></i>Go to Home
                            </a>
                        </div>
                    }
                    else
                    {
                        <p>
                            You are not currently logged in. Please log in with an account that has the required permissions.
                        </p>
                        
                        <div class="mt-4">
                            <a asp-controller="Login" asp-action="Login" class="btn btn-primary me-2">
                                <i class="fas fa-sign-in-alt me-2"></i>Log In
                            </a>
                            <a asp-controller="Login" asp-action="AdminLogin" class="btn btn-outline-primary">
                                <i class="fas fa-user-shield me-2"></i>Admin Login
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div> 